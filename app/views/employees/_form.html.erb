<%= form_for @employee, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :title, :class => 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :desc, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :desc, :class => 'text_field form-control', rows: 10 %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :start_date, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :start_date, {:class => 'text_field form-control', 'data-provide' => 'datepicker', 'data-date-format' => 'yyyy-mm-dd', 'data-date-today-btn' => 'linked', 'placeholder' => 'YYYY-MM-DD'} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :years_with_others, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :years_with_others, :class => 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  employees_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
